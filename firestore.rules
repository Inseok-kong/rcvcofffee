rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 문서 - 본인만 읽기/쓰기 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 커피 문서 - 모든 인증된 사용자가 읽기/쓰기 가능 (공유 재고)
    match /coffees/{coffeeId} {
      allow read, write: if request.auth != null;
    }
    
    // 레시피 문서 - 모든 인증된 사용자가 읽기/쓰기 가능 (공유 레시피)
    match /recipes/{recipeId} {
      allow read, write: if request.auth != null;
    }
    
    // 소비 기록 문서 - 모든 인증된 사용자가 읽기/쓰기 가능 (공유 소비 기록)
    match /consumptions/{consumptionId} {
      allow read, write: if request.auth != null;
    }
    
    // 원두 사용량 문서 - 모든 인증된 사용자가 읽기/쓰기 가능 (공유 사용량)
    match /beanUsages/{beanUsageId} {
      allow read, write: if request.auth != null;
    }
    
    // 게시글 문서 - 모든 인증된 사용자가 읽기 가능, 작성자만 수정/삭제 가능
    match /boardPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
    }
    
    // 게시글 댓글 문서 - 모든 인증된 사용자가 읽기 가능, 작성자만 수정/삭제 가능
    match /boardComments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
    }
    
    // 레시피 댓글 문서 - 모든 인증된 사용자가 읽기 가능, 작성자만 수정/삭제 가능
    match /recipeComments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
    }
  }
}
